{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "react"],
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": false,
    "noUncheckedIndexedAccess": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
