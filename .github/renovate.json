{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    "group:allNonMajor"
  ],
  "labels": ["dependencies", "automated"],
  "schedule": ["before 5am on monday"],
  "timezone": "America/New_York",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "platformAutomerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Group TypeScript ecosystem updates",
      "matchPackagePatterns": ["^typescript", "^@types/"],
      "groupName": "TypeScript ecosystem"
    },
    {
      "description": "Group Prisma updates",
      "matchPackagePatterns": ["^@prisma/", "^prisma$"],
      "groupName": "Prisma"
    },
    {
      "description": "Group Fastify updates",
      "matchPackagePatterns": ["^fastify", "^@fastify/"],
      "groupName": "Fastify"
    },
    {
      "description": "Group testing tools",
      "matchPackagePatterns": ["^vitest", "^@vitest/", "^playwright", "^@playwright/"],
      "groupName": "Testing tools"
    },
    {
      "description": "Group ESLint updates",
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"],
      "groupName": "ESLint"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "description": "Security updates - high priority",
      "matchUpdateTypes": ["patch", "minor"],
      "matchVulnerabilityPriority": ["critical", "high"],
      "schedule": ["at any time"],
      "automerge": true,
      "labels": ["dependencies", "security", "priority-high"]
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update", "needs-review"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"]
  }
}
