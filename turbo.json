{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["lint", "test"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "clean": {
      "cache": false
    },
    "verify-all": {
      "dependsOn": ["lint", "test", "build"],
      "cache": false
    }
  }
}
