# Server
PORT=3003
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aivo_realtime?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-jwt-secret-key-here

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# WebSocket
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=20000
WS_MAX_BUFFER_SIZE=1048576

# Presence
PRESENCE_TTL=60
PRESENCE_HEARTBEAT_INTERVAL=15000
PRESENCE_CLEANUP_INTERVAL=30000
PRESENCE_OFFLINE_GRACE_PERIOD=30000

# Room Configuration
ROOM_TTL=3600
ROOM_MAX_MEMBERS=100
ROOM_MESSAGE_HISTORY_LIMIT=100

# Collaboration
COLLAB_LOCK_DEFAULT_TTL=30000
COLLAB_OPERATIONS_BUFFER_SIZE=1000

# Scaling
MAX_CONNECTIONS_PER_POD=10000
