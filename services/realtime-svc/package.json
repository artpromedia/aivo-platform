    "@aivo/ts-types": "workspace:*",
    "@prisma/client": "^5.22.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.4.1",
    "jose": "^5.9.2",
    "nanoid": "^5.0.7",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "artillery": "^2.0.19",
    "artillery-engine-socketio-v3": "^1.1.0",
    "eslint": "^9.12.0",
    "prisma": "^5.22.0",
    "socket.io-client": "^4.7.5",
