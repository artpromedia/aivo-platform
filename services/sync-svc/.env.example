# Sync Service Configuration

# Server
PORT=3080
HOST=0.0.0.0

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aivo_sync?schema=public"

# Redis (for pub/sub and BullMQ)
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-jwt-secret-here"
JWT_ISSUER="aivo"

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_MAX_CONFLICTS=50
SYNC_CONFLICT_TTL_DAYS=30
SYNC_HISTORY_RETENTION_DAYS=90

# WebSocket
WS_HEARTBEAT_INTERVAL_MS=30000
WS_CLIENT_TIMEOUT_MS=90000

# Background Jobs
JOB_CLEANUP_CRON="0 0 3 * * *"
JOB_CONFLICT_RESOLVE_CRON="0 */5 * * * *"

# Feature Flags
ENABLE_DELTA_SYNC=true
ENABLE_AUTO_CONFLICT_RESOLUTION=true
ENABLE_WEBSOCKET_SYNC=true
