{{!-- Password Reset Email Template --}}
{{!-- Sent when a user requests a password reset --}}

{{#> layouts/base}}

<div style="text-align: center; margin-bottom: 24px;">
  <div style="width: 64px; height: 64px; background-color: #fef3c7; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin: 0 auto;">
    <span style="font-size: 28px;">ğŸ”</span>
  </div>
</div>

<h1 style="text-align: center;">{{t 'password_reset.title'}}</h1>

<p style="text-align: center;">
  {{t 'password_reset.intro' email=userEmail}}
</p>

<p style="text-align: center; color: #52525b;">
  {{t 'password_reset.instruction'}}
</p>

<div style="text-align: center; margin: 32px 0;">
  <a href="{{resetUrl}}" class="btn-primary" style="background-color: {{brandColor}}; color: #ffffff; text-decoration: none; padding: 14px 32px; border-radius: 8px; font-weight: 600; display: inline-block;">
    {{t 'password_reset.reset_button'}}
  </a>
</div>

<div style="background-color: #f4f4f5; border-radius: 8px; padding: 16px; margin: 24px 0;">
  <p style="margin: 0; font-size: 14px; color: #52525b;">
    {{t 'password_reset.link_note'}}
  </p>
  <p style="margin: 8px 0 0 0; font-size: 12px; word-break: break-all; color: #71717a;">
    {{resetUrl}}
  </p>
</div>

<div style="background-color: #fee2e2; border-radius: 8px; padding: 16px; margin: 24px 0;">
  <p style="margin: 0; color: #991b1b;">
    <strong>â±ï¸ {{t 'password_reset.expiry_title'}}</strong><br>
    {{t 'password_reset.expiry_message' minutes=expiryMinutes}}
  </p>
</div>

<hr style="border: none; border-top: 1px solid #e4e4e7; margin: 24px 0;">

<div style="background-color: #fafafa; border-radius: 8px; padding: 16px;">
  <p style="margin: 0 0 8px 0; font-weight: 600; color: #18181b;">
    ğŸ›¡ï¸ {{t 'password_reset.security_title'}}
  </p>
  <ul style="margin: 0; padding-left: 20px; color: #52525b; font-size: 14px;">
    <li style="margin-bottom: 4px;">{{t 'password_reset.security_tip1'}}</li>
    <li style="margin-bottom: 4px;">{{t 'password_reset.security_tip2'}}</li>
    <li>{{t 'password_reset.security_tip3'}}</li>
  </ul>
</div>

<p style="text-align: center; color: #71717a; margin-top: 24px; font-size: 14px;">
  {{t 'password_reset.not_requested'}}
  <a href="{{supportUrl}}" style="color: {{brandColor}};">{{t 'password_reset.contact_support'}}</a>
</p>

{{#if requestInfo}}
<div style="margin-top: 24px; padding: 16px; background-color: #f4f4f5; border-radius: 8px;">
  <p style="margin: 0; font-size: 12px; color: #71717a;">
    <strong>{{t 'password_reset.request_info'}}</strong><br>
    {{t 'password_reset.requested_at'}}: {{requestInfo.timestamp}}<br>
    {{t 'password_reset.ip_address'}}: {{requestInfo.ipAddress}}<br>
    {{t 'password_reset.browser'}}: {{requestInfo.browser}}
  </p>
</div>
{{/if}}

{{/layouts/base}}
