{{!-- Email Verification Template --}}
{{!-- Sent when a user needs to verify their email address --}}

{{#> layouts/base}}

<div style="text-align: center; margin-bottom: 24px;">
  <div style="width: 64px; height: 64px; background-color: #dbeafe; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin: 0 auto;">
    <span style="font-size: 28px;">✉️</span>
  </div>
</div>

<h1 style="text-align: center;">{{t 'email_verification.title'}}</h1>

<p style="text-align: center; font-size: 18px;">
  {{t 'email_verification.greeting' name=userName}}
</p>

<p style="text-align: center; color: #52525b;">
  {{t 'email_verification.instruction'}}
</p>

<div style="text-align: center; margin: 32px 0;">
  <a href="{{verificationUrl}}" class="btn-primary" style="background-color: {{brandColor}}; color: #ffffff; text-decoration: none; padding: 14px 32px; border-radius: 8px; font-weight: 600; display: inline-block;">
    {{t 'email_verification.verify_button'}}
  </a>
</div>

{{#if verificationCode}}
<div style="background-color: #f4f4f5; border-radius: 8px; padding: 24px; margin: 24px 0; text-align: center;">
  <p style="margin: 0 0 8px 0; font-size: 14px; color: #71717a;">
    {{t 'email_verification.code_label'}}
  </p>
  <p style="margin: 0; font-size: 32px; font-weight: 700; letter-spacing: 8px; color: #18181b; font-family: monospace;">
    {{verificationCode}}
  </p>
  <p style="margin: 12px 0 0 0; font-size: 14px; color: #71717a;">
    {{t 'email_verification.code_expires' minutes=codeExpiryMinutes}}
  </p>
</div>
{{/if}}

<div style="background-color: #ecfdf5; border-radius: 8px; padding: 16px; margin: 24px 0;">
  <p style="margin: 0; color: #065f46;">
    <strong>✓ {{t 'email_verification.benefits_title'}}</strong>
  </p>
  <ul style="margin: 8px 0 0 0; padding-left: 20px; color: #065f46; font-size: 14px;">
    <li>{{t 'email_verification.benefit1'}}</li>
    <li>{{t 'email_verification.benefit2'}}</li>
    <li>{{t 'email_verification.benefit3'}}</li>
  </ul>
</div>

<hr style="border: none; border-top: 1px solid #e4e4e7; margin: 24px 0;">

<p style="text-align: center; color: #71717a; font-size: 14px;">
  {{t 'email_verification.link_note'}}<br>
  <span style="font-size: 12px; word-break: break-all;">{{verificationUrl}}</span>
</p>

<p style="text-align: center; color: #71717a; margin-top: 16px; font-size: 14px;">
  {{t 'email_verification.ignore_message'}}
</p>

{{/layouts/base}}
