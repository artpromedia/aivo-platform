{{!-- Account Locked Template --}}
{{!-- Sent when a user's account is locked due to security concerns --}}

{{#> layouts/base}}

<div style="text-align: center; margin-bottom: 24px;">
  <div style="width: 64px; height: 64px; background-color: #fee2e2; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin: 0 auto;">
    <span style="font-size: 28px;">üîí</span>
  </div>
</div>

<h1 style="text-align: center; color: #991b1b;">{{t 'account_locked.title'}}</h1>

<p style="text-align: center; font-size: 18px;">
  {{t 'account_locked.greeting' name=userName}}
</p>

<p style="text-align: center; color: #52525b;">
  {{t 'account_locked.intro'}}
</p>

<div style="background-color: #fee2e2; border-radius: 8px; padding: 20px; margin: 24px 0;">
  <p style="margin: 0; font-weight: 600; color: #991b1b;">
    {{t 'account_locked.reason_title'}}
  </p>
  <p style="margin: 8px 0 0 0; color: #991b1b;">
    {{lockReason}}
  </p>
</div>

{{#if unlockUrl}}
<p style="text-align: center; color: #52525b;">
  {{t 'account_locked.unlock_instruction'}}
</p>

<div style="text-align: center; margin: 32px 0;">
  <a href="{{unlockUrl}}" class="btn-primary" style="background-color: {{brandColor}}; color: #ffffff; text-decoration: none; padding: 14px 32px; border-radius: 8px; font-weight: 600; display: inline-block;">
    {{t 'account_locked.unlock_button'}}
  </a>
</div>
{{/if}}

{{#if autoUnlockTime}}
<div style="background-color: #fef3c7; border-radius: 8px; padding: 16px; margin: 24px 0;">
  <p style="margin: 0; color: #92400e;">
    <strong>‚è±Ô∏è {{t 'account_locked.auto_unlock_title'}}</strong><br>
    {{t 'account_locked.auto_unlock_message' time=autoUnlockTime}}
  </p>
</div>
{{/if}}

<hr style="border: none; border-top: 1px solid #e4e4e7; margin: 24px 0;">

<div style="background-color: #fafafa; border-radius: 8px; padding: 16px;">
  <p style="margin: 0 0 12px 0; font-weight: 600; color: #18181b;">
    {{t 'account_locked.security_title'}}
  </p>
  <ul style="margin: 0; padding-left: 20px; color: #52525b; font-size: 14px;">
    <li style="margin-bottom: 8px;">{{t 'account_locked.tip1'}}</li>
    <li style="margin-bottom: 8px;">{{t 'account_locked.tip2'}}</li>
    <li style="margin-bottom: 8px;">{{t 'account_locked.tip3'}}</li>
    <li>{{t 'account_locked.tip4'}}</li>
  </ul>
</div>

{{#if suspiciousActivity}}
<div style="margin-top: 24px; padding: 16px; background-color: #f4f4f5; border-radius: 8px;">
  <p style="margin: 0 0 8px 0; font-size: 14px; font-weight: 600; color: #18181b;">
    {{t 'account_locked.activity_title'}}
  </p>
  <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="font-size: 13px;">
    {{#each suspiciousActivity}}
    <tr>
      <td style="padding: 4px 0; color: #71717a;">{{timestamp}}</td>
      <td style="padding: 4px 0; color: #52525b;">{{description}}</td>
      <td style="padding: 4px 0; color: #71717a;">{{location}}</td>
    </tr>
    {{/each}}
  </table>
</div>
{{/if}}

<p style="text-align: center; margin-top: 24px; font-size: 14px;">
  {{t 'account_locked.need_help'}}<br>
  <a href="{{supportUrl}}" style="color: {{brandColor}}; text-decoration: underline;">{{t 'account_locked.contact_support'}}</a>
  {{#if supportPhone}}
  <br>{{t 'account_locked.or_call'}} <a href="tel:{{supportPhone}}" style="color: {{brandColor}};">{{supportPhone}}</a>
  {{/if}}
</p>

{{/layouts/base}}
