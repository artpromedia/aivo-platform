# Notify Service Environment Variables

PORT=4040
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aivo_notify?schema=public

# NATS
NATS_ENABLED=false
NATS_URL=nats://localhost:4222

# Firebase Cloud Messaging (for Android/Web push)
FCM_ENABLED=false
FCM_PROJECT_ID=
FCM_SERVICE_ACCOUNT_PATH=

# Apple Push Notification Service (for iOS)
APNS_ENABLED=false
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=
APNS_BUNDLE_ID=

# Email (SendGrid)
EMAIL_ENABLED=false
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=noreply@aivo.app
EMAIL_FROM_NAME=AIVO

# SMS (Twilio)
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Rate Limits
PUSH_RATE_LIMIT=100
EMAIL_RATE_LIMIT=50
SMS_RATE_LIMIT=10
