# ===========================================
# Billing Service Configuration
# ===========================================

# Service Identity
SERVICE_NAME=billing-svc
SERVICE_PORT=3008

# Database
DATABASE_URL=postgresql://billing:${BILLING_DB_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/aivo_billing

# Stripe Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Stripe Products (configure in Stripe Dashboard)
STRIPE_PRODUCT_STARTER=
STRIPE_PRODUCT_PROFESSIONAL=
STRIPE_PRODUCT_ENTERPRISE=

# Pricing
DEFAULT_CURRENCY=usd
TRIAL_PERIOD_DAYS=14
GRACE_PERIOD_DAYS=7

# Usage-Based Billing
TRACK_AI_USAGE=true
TRACK_STORAGE_USAGE=true
TRACK_API_CALLS=true
USAGE_SYNC_INTERVAL_MINUTES=15

# Invoicing
AUTO_INVOICE=true
INVOICE_DUE_DAYS=30
SEND_INVOICE_EMAILS=true

# Tax
TAX_CALCULATION_ENABLED=true
TAX_PROVIDER=stripe

# Notifications
PAYMENT_REMINDER_DAYS=7,3,1
TRIAL_ENDING_NOTIFICATION_DAYS=3
