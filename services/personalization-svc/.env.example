# ===========================================
# Personalization Service Configuration
# ===========================================

# Service Identity
SERVICE_NAME=personalization-svc
SERVICE_PORT=3014

# Database
DATABASE_URL=postgresql://personalization:${PERSONALIZATION_DB_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/aivo_personalization

# Learning Path
ADAPTIVE_LEARNING_ENABLED=true
PATH_RECALCULATION_INTERVAL_HOURS=24
MIN_DATA_POINTS_FOR_ADAPTATION=10

# Recommendation Engine
RECOMMENDATION_MODEL=collaborative_filtering
RECOMMENDATION_REFRESH_HOURS=6
MAX_RECOMMENDATIONS=10

# Difficulty Adjustment
AUTO_ADJUST_DIFFICULTY=true
DIFFICULTY_WINDOW_SIZE=10
MASTERY_THRESHOLD=0.8
STRUGGLE_THRESHOLD=0.4

# Content Sequencing
SEQUENCING_ALGORITHM=knowledge_graph
PREREQUISITE_ENFORCEMENT=soft
ALLOW_SKIP_AHEAD=true

# A/B Testing
AB_TESTING_ENABLED=true
DEFAULT_TRAFFIC_SPLIT=50

# ML Model Settings
MODEL_VERSION=v1
MODEL_REFRESH_INTERVAL_HOURS=24
FEATURE_STORE_ENABLED=true
