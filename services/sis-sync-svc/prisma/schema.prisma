/// Webhook configuration for real-time SIS updates
model WebhookConfig {
  id              String   @id @default(cuid())
  tenantId        String   @map("tenant_id")
  providerId      String   @map("provider_id")
  provider        String   // clever, classlink, oneroster, edfi, google, microsoft, custom
  
  /// Webhook URL (our endpoint URL registered with provider)
  url             String
  
  /// Secret for signature verification
  webhookSecret   String   @map("webhook_secret")
  
  /// Which events to process
  events          String[] @default([])
  
  /// Whether this webhook is active
  enabled         Boolean  @default(true)
  
  /// Health tracking
  lastReceivedAt  DateTime? @map("last_received_at")
  failureCount    Int      @default(0) @map("failure_count")
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@unique([tenantId, providerId])
  @@index([tenantId])
  @@index([enabled])
  @@map("webhook_configs")
}

/// Webhook event log for debugging
model WebhookLog {
  id              String   @id @default(cuid())
  tenantId        String   @map("tenant_id")
  eventId         String   @map("event_id")
  payload         String   @db.Text
  status          String   // success, failed, ignored
  error           String?  @db.Text
  processedAt     DateTime @map("processed_at")
  
  createdAt       DateTime @default(now()) @map("created_at")
  
  @@index([tenantId])
  @@index([eventId])
  @@index([processedAt])
  @@map("webhook_logs")
}

/// Dead letter queue for failed webhooks
model WebhookDeadLetter {
  id              String   @id @default(cuid())
  eventId         String   @map("event_id")
  provider        String
  payload         String   @db.Text
  error           String   @db.Text
  retryCount      Int      @default(0) @map("retry_count")
  lastRetryAt     DateTime? @map("last_retry_at")
  
  createdAt       DateTime @default(now()) @map("created_at")
  
  @@index([provider])
  @@index([retryCount])
  @@index([createdAt])
  @@map("webhook_dead_letters")
}
