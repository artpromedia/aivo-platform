# ML Recommendation Service Environment Variables

# Service
PORT=4020
ENVIRONMENT=development
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql+asyncpg://aivo:aivo_dev_password@localhost:5432/aivo_learner_model

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_FEATURE_TTL=3600
REDIS_MODEL_CACHE_TTL=86400

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=aivo.events
RABBITMQ_QUEUE=ml-recommendations

# ML Model Weights
COLLABORATIVE_WEIGHT=0.3
CONTENT_BASED_WEIGHT=0.3
KNOWLEDGE_TRACING_WEIGHT=0.4

# Bandit Settings
EPSILON=0.1
UCB_C=2.0

# Recommendation Settings
MAX_RECOMMENDATIONS=20
MIN_CONFIDENCE=0.1
DIVERSITY_FACTOR=0.2

# Observability
OTEL_EXPORTER_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ml-recommendation-svc
