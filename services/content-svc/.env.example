# ===========================================
# Content Service Configuration
# ===========================================

# Service Identity
SERVICE_NAME=content-svc
SERVICE_PORT=3003

# Database
DATABASE_URL=postgresql://content:${CONTENT_DB_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/aivo_content

# Content Settings
MAX_CONTENT_SIZE_MB=100
MAX_BLOCKS_PER_CONTENT=500
CONTENT_AUTOSAVE_INTERVAL_MS=30000

# Version Control
MAX_VERSIONS_TO_KEEP=50
AUTO_ARCHIVE_AFTER_DAYS=365

# Media Processing
IMAGE_MAX_WIDTH=4096
IMAGE_MAX_HEIGHT=4096
IMAGE_QUALITY=85
VIDEO_MAX_DURATION_SECONDS=3600
AUDIO_MAX_DURATION_SECONDS=1800

# CDN Settings
CDN_CACHE_CONTROL_PUBLIC=max-age=31536000
CDN_CACHE_CONTROL_PRIVATE=private, max-age=3600

# Search Indexing
SEARCH_INDEX_BATCH_SIZE=100
SEARCH_INDEX_DELAY_MS=1000

# Content Review
AUTO_ASSIGN_REVIEWERS=true
REVIEW_DEADLINE_DAYS=7
