# ===========================================
# Assessment Service Configuration
# ===========================================

# Service Identity
SERVICE_NAME=assessment-svc
SERVICE_PORT=3004

# Database
DATABASE_URL=postgresql://assessment:${ASSESSMENT_DB_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/aivo_assessment

# Assessment Settings
MAX_QUESTIONS_PER_ASSESSMENT=100
DEFAULT_TIME_LIMIT_MINUTES=60
MAX_TIME_LIMIT_MINUTES=180
ALLOW_LATE_SUBMISSIONS=false
LATE_SUBMISSION_PENALTY_PERCENT=0

# Scoring
AUTO_SCORE_OBJECTIVE=true
AUTO_SCORE_SHORT_ANSWER=true
AI_ASSISTED_GRADING=true
SCORE_PRECISION=2

# Anti-Cheating
SHUFFLE_QUESTIONS=true
SHUFFLE_ANSWERS=true
LOCKDOWN_BROWSER_REQUIRED=false
PROCTORING_ENABLED=false
TAB_SWITCH_DETECTION=true
MAX_TAB_SWITCHES=3

# Analytics
TRACK_TIME_PER_QUESTION=true
TRACK_ANSWER_CHANGES=true
GENERATE_ITEM_ANALYSIS=true

# Accommodations
ALLOW_EXTENDED_TIME=true
MAX_TIME_EXTENSION_PERCENT=200
ALLOW_TEXT_TO_SPEECH=true
ALLOW_BREAKS=true
