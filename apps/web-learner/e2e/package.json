{
  "name": "@aivo/web-learner-e2e",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end testing suite for AIVO Web Learner",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:a11y": "playwright test --project=accessibility",
    "test:visual": "playwright test --project=visual",
    "test:integration": "playwright test e2e/integration/",
    "test:contracts:consumer": "jest --config jest.pact.config.js --testPathPattern=consumer.pact.spec.ts",
    "test:contracts:provider": "jest --config jest.pact.config.js --testPathPattern=provider.pact.spec.ts",
    "test:perf": "k6 run performance/load-test.js",
    "test:perf:smoke": "k6 run --env SCENARIO=smoke performance/load-test.js",
    "test:perf:load": "k6 run --env SCENARIO=load performance/load-test.js",
    "test:perf:stress": "k6 run --env SCENARIO=stress performance/load-test.js",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "update-snapshots": "playwright test --update-snapshots",
    "clean": "rimraf test-results playwright-report pacts"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@percy/playwright": "^1.0.4",
    "@pact-foundation/pact": "^12.1.0",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.2",
    "playwright": "^1.40.0",
    "testcontainers": "^10.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
