{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": ".next",
    "jsx": "preserve",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "baseUrl": ".",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@aivo/*": ["../../libs/*/src", "../../services/*/src", "../../apps/*/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": ["node_modules", ".next", "dist", "build"]
}
