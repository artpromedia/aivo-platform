{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": ".next",
    "jsx": "preserve",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@aivo/*": ["../../libs/*/src", "../../services/*/src", "../../apps/*/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["app/**/*", "components/**/*", "lib/**/*", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist", "build"]
}
