{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": ".next",
    "jsx": "preserve",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "src/**/*",
    "__tests__/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": ["node_modules", ".next", "dist", "build"]
}
