# ===========================================
# AIVO Platform - Base Configuration
# Shared across all environments
# ===========================================

# Application
APP_NAME=aivo-platform
APP_VERSION=1.0.0

# Logging
LOG_FORMAT=json
LOG_TIMESTAMP=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/wav,application/pdf

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=86400

# Session Configuration
SESSION_COOKIE_NAME=aivo_session
SESSION_MAX_AGE_DAYS=7

# Timezone
TZ=UTC

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL_MS=30000

# Graceful Shutdown
SHUTDOWN_TIMEOUT_MS=30000

# Request Timeout
REQUEST_TIMEOUT_MS=30000

# Body Parser Limits
JSON_BODY_LIMIT=10mb
URL_ENCODED_LIMIT=10mb
