# ===========================================
# AIVO Platform - Development Configuration
# For local development only
# ===========================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Server
HOST=0.0.0.0
PORT=3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aivo_dev
DATABASE_USER=aivo
DATABASE_PASSWORD=aivo_dev_password
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Connection string template (each service appends its database name)
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# NATS
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=aivo-dev

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d
JWT_ISSUER=aivo-dev
JWT_AUDIENCE=aivo-platform

# JWT Keys (Development only - generated by scripts/generate-secrets.sh)
JWT_PRIVATE_KEY_PATH=./config/secrets/jwt-private.pem
JWT_PUBLIC_KEY_PATH=./config/secrets/jwt-public.pem

# API Gateway
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# Storage (MinIO for local development)
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=aivo_minio
STORAGE_SECRET_KEY=aivo_minio_secret
STORAGE_BUCKET_CONTENT=aivo-content-dev
STORAGE_BUCKET_UPLOADS=aivo-uploads-dev
STORAGE_BUCKET_EXPORTS=aivo-exports-dev
STORAGE_REGION=us-east-1

# CDN (local proxy in development)
CDN_URL=http://localhost:8080/content

# Email (MailHog for local development)
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@aivo.dev
EMAIL_FROM_NAME=AIVO Platform

# AI/LLM Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=sk-dev-placeholder
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
ANTHROPIC_API_KEY=
AI_REQUEST_TIMEOUT_MS=60000

# Search (Elasticsearch)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=aivo_dev

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=aivo-platform
OTEL_TRACES_SAMPLER=always_on
PROMETHEUS_METRICS_PORT=9090

# Feature Flags
FEATURE_AI_TUTOR=true
FEATURE_GAMIFICATION=true
FEATURE_MARKETPLACE=true
FEATURE_REAL_TIME_COLLAB=true
FEATURE_HOMEWORK_HELPER=true
FEATURE_BASELINE_ASSESSMENT=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173

# Debug
DEBUG=aivo:*
PRISMA_QUERY_LOG=true

# Mobile App URLs
MOBILE_DEEP_LINK_SCHEME=aivo
MOBILE_UNIVERSAL_LINK_DOMAIN=localhost

# WebSocket
WS_PING_INTERVAL_MS=30000
WS_PING_TIMEOUT_MS=5000
