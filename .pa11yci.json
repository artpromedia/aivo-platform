{
  "defaults": {
    "timeout": 30000,
    "wait": 1000,
    "standard": "WCAG2AA",
    "runners": ["axe", "htmlcs"],
    "chromeLaunchConfig": {
      "args": ["--no-sandbox", "--disable-setuid-sandbox"]
    },
    "hideElements": ".loading-spinner, .skeleton",
    "ignore": [
      "WCAG2AA.Principle1.Guideline1_4.1_4_3.G18.Fail"
    ]
  },
  "urls": [
    {
      "url": "http://localhost:3000",
      "screenCapture": "./pa11y-screenshots/home.png"
    },
    {
      "url": "http://localhost:3000/login",
      "screenCapture": "./pa11y-screenshots/login.png"
    },
    {
      "url": "http://localhost:3000/dashboard",
      "screenCapture": "./pa11y-screenshots/dashboard.png",
      "headers": {
        "Authorization": "Bearer ${TEST_TOKEN}"
      }
    },
    {
      "url": "http://localhost:3000/courses",
      "screenCapture": "./pa11y-screenshots/courses.png"
    },
    {
      "url": "http://localhost:3000/settings",
      "screenCapture": "./pa11y-screenshots/settings.png"
    }
  ]
}
