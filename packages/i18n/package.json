{
  "name": "@aivo/i18n",
  "version": "1.0.0",
  "description": "Internationalization framework for AIVO platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.mjs",
      "require": "./dist/styles/index.js",
      "types": "./dist/styles/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts src/styles/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/react/index.ts src/styles/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "extract": "node scripts/extract-translations.js"
  },
  "dependencies": {
    "intl-messageformat": "^10.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "rtl",
    "react"
  ],
  "license": "MIT"
}
