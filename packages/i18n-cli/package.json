{
  "name": "@aivo/i18n-cli",
  "version": "1.0.0",
  "description": "CLI tools for AIVO internationalization",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "aivo-i18n": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --dts",
    "dev": "tsup src/cli.ts src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "lint": "eslint src"
  },
  "dependencies": {
    "@aivo/i18n": "workspace:*",
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.2",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.5",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "i18n",
    "cli",
    "translation",
    "extraction"
  ]
}
