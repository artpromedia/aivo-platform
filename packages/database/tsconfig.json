{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "verbatimModuleSyntax": false,
    "exactOptionalPropertyTypes": false
